
<div class = "container" id = "left-container">
    <h3 class = "ul-headers">Items to buy</h3>
    <ul class = "item-lists">
        {{#each items}}
            {{#unless purchased}}
            {{> items/items-block purchased=false}}
        {{/unless}}
    {{/each}}
    </ul>
</div>

<div class = "container" id = "right-container">
    <h3 class = "ul-headers">Items bought</h3>

    <ul class = "item-lists">
        {{#each items}}
            {{#if purchased}}
                {{> items/items-block purchased=true}}
            {{/if}}
        {{/each}}
    </ul>
</div>


<h3>Add an item</h3>
<form class = "adder">

    <div class="form-group">
        <label for="item-name">Item Name:</label>
        <input type="text" id="item-name" name="name">
    </div>
    <div class="form-group">
        <label for="item-price">Item Price:</label>
        <input type="text" id="item-price" name="price">
    </div>

    <button id = "form-submitter" type="submit">Add Item</button>


</form>